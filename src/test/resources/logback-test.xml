<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender class="ch.qos.logback.core.ConsoleAppender" name="CONSOLE">
        <encoder>
            <pattern>%date [%-5level] [%thread] %logger{5} - %m%n</pattern>
        </encoder>
    </appender>

    <logger name="no.nav.pam" level="DEBUG"/>
    <logger name="org.hibernate.SQL" level="INFO" />
    <logger name="org.hibernate.engine.internal.StatisticalLoggingSessionEventListener" level="OFF" />
    <logger name="no.nav.metrics.handlers" level="OFF"/>
    <logger name="no.finn.unleash" level="ERROR" />
    
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>
</configuration>